<Window x:Class="GibddApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GibddApp"
        mc:Ignorable="d"
        Title="{Binding Content.Title, ElementName=MainFrm}" Height="800" Width="1100" MinHeight="800" MinWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="#b5d5ca">
            <TextBlock Text="ГИБДД" FontSize="45" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" Margin="20"
                       FontFamily="Tahoma"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Background="#d1eefc"/>
        <Image Source="/UI/Logo/gibdd_logo.png" HorizontalAlignment="Left"/>
        <Frame NavigationUIVisibility="Hidden" x:Name="MainFrm" Grid.Row="1"/>
    </Grid>
</Window>
